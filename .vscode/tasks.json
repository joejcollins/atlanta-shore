{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile to PDF",
        "type": "shell",
        "command": "pandoc",
        "args": [
          "${file}",
          "--template",
          "${workspaceFolder}/reports/markdown_template.ltx",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.pdf"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      }
    ]
  }